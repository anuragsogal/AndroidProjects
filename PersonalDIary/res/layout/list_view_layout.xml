<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    style="@style/storyListBGColor">

    <TextView
        android:id="@+id/storyIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:text="TextView" />

     <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/storyTitleTextView"
        android:layout_alignBottom="@+id/storyTitleTextView"
        android:layout_toRightOf="@+id/storyIDTextView"
         android:textColor="#000000"
        android:text="." />
    
    <TextView
        android:id="@+id/storyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/storyIDTextView"
        android:layout_alignBottom="@+id/storyIDTextView"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/storyIDTextView"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="TextView" />

</RelativeLayout>
